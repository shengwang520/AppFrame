        <activity android:name=".common.activity.BigImagesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".common.activity.ChooseImagesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".common.activity.WebViewActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>
